<nav id="fondo" class="bg-yellow-400 border-b border-gray-200">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
      <!-- Logo -->
      <div class="text-lg font-bold flex items-center ">
        <a href="/" class="text-black flex items-center gap-4 hover:scale-110 transition-transform duration-300">
            <img class="h-10 w-10" src="/src/assets/logo-bordart.png" alt="">
            Bordart
        </a>
      </div>
  
      <!-- Menu Button for small screens -->
      <button
        id="menu-button"
        class="sm:hidden flex items-center focus:outline-none"
      >
        <img id="menu-icon" src="/src/assets/menu-black.svg" alt="Menu" class="h-6 w-6" />
      </button>
  
      <!-- Links (Hidden on sm, flex on md+) -->
      <div class="hidden sm:flex space-x-6">
        <a href="/products/" class="text-black font-bold hover:text-gray-500 hover:scale-110 transition-transform duration-300">Productos</a>
        <a href="/catalog/" class="text-black font-bold hover:text-gray-500 hover:scale-110 transition-transform duration-300">Catalogo</a>
        <a href="/#questions" class="text-black font-bold hover:text-gray-500 hover:scale-110 transition-transform duration-300">Preguntas</a>
        <a href="/aboutus/" class="text-black font-bold hover:text-gray-500 hover:scale-110 transition-transform duration-300">Nosotros</a>
      </div>
    </div>
  
    <!-- Dropdown menu for small screens -->
    <div id="menu-dropdown" class="hidden sm:hidden bg-gray-50 border-gray-200 "
    transition-style="in:wipe:down"
    >
      <a
        href="/products/"
        class="block px-4 py-2 text-black hover:bg-gray-500 hover:text-white"
        transition-style="in:wipe:down"
      >
        Productos
      </a>
      <a
        href="/catalog/"
        class="block px-4 py-2 text-black hover:bg-gray-500 hover:text-white"
        transition-style="in:wipe:down"
      >
        Catalogo
      </a>
      <a
        href="/#questions"
        class="block px-4 py-2 text-black hover:bg-gray-500 hover:text-white"
        transition-style="in:wipe:down"
      >
        Preguntas
      </a>
      <a
        href="/aboutus/"
        class="block px-4 py-2 text-black hover:bg-gray-500 hover:text-white"
        transition-style="in:wipe:down"
      >
        Nosotros
      </a>
    </div>
  </nav>
  
  <script>
    // Astro Vanilla JS Script
    const menuButton = document.getElementById("menu-button");
    const menuDropdown = document.getElementById("menu-dropdown");
    const menuIcon = document.getElementById("menu-icon");
  
    if (menuButton) {
    menuButton.addEventListener("click", () => {
      // Toggle visibility of the dropdown menu
      if (menuDropdown) {
        const isHidden = menuDropdown.classList.contains("hidden");
        menuDropdown.classList.toggle("hidden");

        // Cambia el ícono basado en el estado del menú
        if (isHidden) {
          // El menú se abre, cambia a la cruz
          if (menuIcon) {
            (menuIcon as HTMLImageElement).src = "/src/assets/close.svg"; // Cambia al ícono de cruz
            (menuIcon as HTMLImageElement).alt = "Close Menu";
          }
        } else {
          // El menú se cierra, cambia al ícono de menú
          if (menuIcon) {
            (menuIcon as HTMLImageElement).src = "/src/assets/menu-black.svg"; // Cambia al ícono del menú
            (menuIcon as HTMLImageElement).alt = "Open Menu";
          }
        }
      }
    });
  }
  </script>
  
  <style>
    @keyframes wipe-in-down {
  from {
    clip-path: inset(0 0 100% 0);
  }
  to {
    clip-path: inset(0 0 0 0);
  }
}

[transition-style="in:wipe:down"] {
  animation: 2.5s cubic-bezier(.25, 1, .30, 1) wipe-in-down both;
}

#fondo{
  mask-image: linear-gradient(
    black 90%,
    transparent
  );
}
  </style>