<script>
    const text1 = "BORDART";
    const text = "¡Donde los hilos cobran vida!";
    var indice = 0;
    var termino = false;

    function efectTyping1(){
        if(indice <= text1.length-1){
            const textElement = document.getElementById('text1');
            if (textElement) {
                textElement.innerHTML += text1.charAt(indice);
            }
            indice++;
            setTimeout(efectTyping1, 100);
        }else{
            indice = 0;
            efectTyping();
        }   
    }

    function efectTyping(){

        if(indice <= text.length-1){
            const textElement = document.getElementById('text');
            if (textElement) {
                textElement.innerHTML += text.charAt(indice);
            }
            indice++;
            setTimeout(efectTyping, 100);
        }
    }
    efectTyping1();

    // Notificación de envíos
    document.addEventListener("DOMContentLoaded", () => {
        const notification = document.getElementById('shipping-notification');
        const closeBtn = document.getElementById('close-notification');
        
        if (closeBtn && notification) {
            closeBtn.addEventListener('click', () => {
                notification.style.animation = 'slide-out 0.3s ease-out forwards';
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 300);
            });
        }
    });
</script>

<section class="md:h-screen h-auto w-full flex flex-col items-center justify-center md:justify-between max-h-[600px] relative">
    <!-- Notificación de Envíos -->
    <div id="shipping-notification" class="fixed top-20 right-4 md:right-8 z-50 bg-gradient-to-r from-yellow-400 to-orange-500 text-gray-900 px-4 py-3 rounded-lg shadow-xl flex items-center gap-3 animate-slide-in">
        <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="font-bold text-sm md:text-base">Envíos a todo el país</span>
        </div>
        <button id="close-notification" class="ml-2 text-gray-900 hover:text-gray-700 transition-colors duration-200" aria-label="Cerrar notificación">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
    
    <!-- Texto 1 -->
    <div class="flex justify-center text-center md:pt-32 min-h-2 pt-12 ">
        <p id="text1" class="font-MiFuente font-bold text-4xl md:text-8xl min-h-[96px]"></p>
    </div>
    <!-- Texto 2 -->
    <div class="flex justify-center text-center min-h-0 md:pt-32 p-8 ">
        <p id="text" class="font-MiFuente font-bold text-lg md:text-5xl min-h-[64px]"></p>
    </div>
    <!-- Logo -->
    <div class="md:mt-auto md:block ">
        <img class="size-[448px] object-cover" src="/assets/bordart-logo-2.png" alt="">
    </div>
</section>



<style>
    p{
        font-family: 'MiFuente', sans-serif;
    }

    @keyframes slide-in {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @keyframes slide-out {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(100%);
            opacity: 0;
        }
    }

    .animate-slide-in {
        animation: slide-in 0.5s ease-out;
    }

    #shipping-notification {
        max-width: 300px;
    }

    @media (max-width: 768px) {
        #shipping-notification {
            max-width: 250px;
            top: 16px;
            right: 8px;
        }
    }
</style>