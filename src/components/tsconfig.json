{
"extends": "astro/tsconfigs/strict",
"compilerOptions": {
    "baseUrl": ".",
    "paths": {
    "@/*": ["src/*"],
    "@components/*": ["src/components/*"],
    "@layouts/*": ["src/layouts/*"],
    "@scripts/*": ["src/scripts/*"]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
},
"include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    ".astro/types.d.ts"
],
"exclude": ["dist", "node_modules"]
}
