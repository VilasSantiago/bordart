<section id="products" class="bg-white relative">
    <div class="flex flex-col items-center py-8">    
        <h2 class="text-center font-bold text-xl md:text-3xl mb-8">Productos</h2>
    
        <!-- Imagen del fondo a la izquierda -->
        <div class="hidden absolute inset-0 lgnp:flex justify-left items-center pointer-events-none z-10">
            <img class="opacity-30 size-64 translate-y-[250px] translate-x-[-100px]" src="/assets/logo-bordart.png" alt="Fondo">
        </div>    

        <!-- Imagen del fondo a la derecha -->
        <div class="hidden absolute inset-0 lg:flex justify-end items-center pointer-events-none z-10 overflow-hidden object-cover">
            <img class="opacity-30 size-64 translate-y-[-150px] translate-x-[100px]" src="/assets/logo-bordart.png" alt="Fondo">
        </div> 

        <!-- Contenedor de las cajas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full max-w-6xl px-4">
            <!-- Caja 1 -->
            <div class="group box bg-gray-100 shadow-lg rounded-lg overflow-hidden hover:shadow-xl transform hover:scale-110 transition duration-300 ease-in-out cursor-pointer hover:bg-gray-200 relative">
                <a href="/products/">
                    <img src="/assets/remeraover.png" alt="" class="w-full h-48 object-contain overflow-hidden">
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-lg">Remeras</h3>
                    </div>
                </a>
                <!-- Boton de aclaraciones -->
                <a href="" class="absolute inset-x-0 bottom-4 flex justify-center">
                    <button class="hidden md:block opacity-0 group-hover:opacity-100 transition duration-300 ease-in-out bg-blue-500 text-white px-4 py-2 rouded-lg shadow-md hover:bg-blue-600">
                        Aclaraciones
                    </button>
                </a>
            </div>
            <!-- Caja 2 -->
            <div class="box bg-gray-100 shadow-lg rounded-lg overflow-hidden hover:shadow-xl transform hover:scale-110 transition duration-300 ease-in-out cursor-pointer hover:bg-gray-200">
                <a href="/products/">
                    <img src="/assets/buzo.webp" alt="" class="w-full h-48 object-contain overflow-hidden">
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-lg">Buzos</h3>
                    </div>
                </a>
            </div>
            <!-- Caja 3 -->
            <div class="box bg-gray-100 shadow-lg rounded-lg overflow-hidden hover:shadow-xl transform hover:scale-110 transition duration-300 ease-in-out cursor-pointer hover:bg-gray-200">
                <a href="/products/">
                    <img src="/assets/gorros.webp" alt="" class="w-full h-48 object-contain">
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-lg">Gorros de Lana</h3>
                    </div>
                </a>
            </div>
            <!-- Caja 4 -->
            <div class="box bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transform hover:scale-110 transition duration-300 ease-in-out cursor-pointer hover:bg-gray-200">
                <a href="/products/">
                    <img src="/assets/piluso.png" alt="" class="w-full h-48 object-contain">
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-lg">Gorras y Pilusos</h3>
                    </div>
                </a>
            </div>
            <!-- Caja 5 -->
            <div class="box bg-gray-100 shadow-lg rounded-lg overflow-hidden hover:shadow-xl transform hover:scale-110 transition duration-300 ease-in-out cursor-pointer hover:bg-gray-200">
                <a href="/products/">
                    <img src="/assets/parche.png" alt="" class="w-full h-48 object-contain">
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-lg">Parches</h3>
                    </div>
                </a>
            </div>
            <!-- Caja 6 -->
            <div class="box bg-gray-100 shadow-lg rounded-lg overflow-hidden hover:shadow-xl transform hover:scale-110 transition duration-300 ease-in-out cursor-pointer hover:bg-gray-200">
                <a href="/products/">
                    <img src="/assets/pines.png" alt="" class="w-full h-48 object-contain">
                    <div class="p-4 text-center">
                        <h3 class="font-bold text-lg">Pines</h3>
                    </div>
                </a>
            </div>
            
        </div>
    </div>
    
</section>