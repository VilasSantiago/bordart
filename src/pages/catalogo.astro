---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import Divider from '../components/Divider.astro';
import Navigation from 'src/components/Navigation.astro';
import Button from 'src/components/Button.astro';
import "@splidejs/splide/css";
---

<Layout>
<div class="min-h-screen bg-gradient-to-b from-white via-yellow-50 to-yellow-50">
    <div class="hidden md:block">
        <Button />
    </div>
    <Navigation />

    <!-- Main Container with Sidebar -->
    <div class="flex flex-col md:flex-row max-w-7xl mx-auto">
        <!-- Sidebar -->
        <aside class="w-full md:w-64 bg-white shadow-lg md:sticky md:top-16 md:h-[calc(100vh-4rem)] md:overflow-y-auto z-40">
            <div class="p-4">
                <h2 class="text-2xl font-bold text-yellow-800 mb-6 px-2">Categorías</h2>
                <nav class="space-y-2">
                    <button 
                        data-category="coleccion-bordart"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 active-category bg-yellow-200 text-yellow-900">
                        Colección Bordart
                    </button>
                    <button 
                        data-category="argentina"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Argentina
                    </button>
                    <button 
                        data-category="pelis-series"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Pelis y series
                    </button>
                    <button 
                        data-category="musica"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Música
                    </button>
                    <button 
                        data-category="arte"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Arte
                    </button>
                    <button 
                        data-category="amor"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Amor
                    </button>
                    <button 
                        data-category="anime"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Anime
                    </button>
                    <button 
                        data-category="dibujos-animados"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Dibujos Animados
                    </button>
                    <button 
                        data-category="nike-personajes"
                        class="category-btn w-full text-left px-4 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-yellow-100 text-gray-700">
                        Nike x Personajes
                    </button>
