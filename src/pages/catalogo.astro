---
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
import Divider from '../components/Divider.astro';
import Navigation from 'src/components/Navigation.astro';
import Button from 'src/components/Button.astro';
---

<Layout>
   <div class="min-h-screen bg-gradient-to-b from-white via-yellow-50 to-yellow-100">
    <div class="hidden md:block">
        <Button />
    </div>
    <Navigation />
    
    <!-- Explanation Section -->
    <section class="max-w-4xl mx-auto py-12 px-4">
        <h2 class="text-4xl font-bold text-center mb-8 text-yellow-800">Aclaraciones</h2>
        <div class="grid gap-6 md:grid-cols-1 lg:grid-cols-3">
            <div class="bg-white p-6 rounded-2xl shadow-lg border-2 border-yellow-200 transform transition-all duration-300 hover:scale-105">
                <p class="text-xl text-center">
                    Los diseños están expresados en <span class="font-bold">ALTO x ANCHO</span>
                </p>
            </div>
            <div class="bg-white p-6 rounded-2xl shadow-lg border-2 border-yellow-300 transform transition-all duration-300 hover:scale-105">
                <p class="text-xl text-center font-bold">
                    Los círculos de colores indican el <span class="text-yellow-600">VALOR DEL DISEÑO</span>. 
                    Podés revisarlo en la lista de precios
                </p>
            </div>
            <div class="bg-white p-6 rounded-2xl shadow-lg border-2 border-yellow-200 transform transition-all duration-300 hover:scale-105">
                <p class="text-xl text-center">
                    Los diseños del catálogo no pueden modificar mucho su tamaño porque pueden haber deformaciones
                </p>
            </div>
        </div>
    </section>
    
    <!-- Colors Legend -->
    <section class="max-w-3xl mx-auto py-8 px-4">
        <div class="bg-white rounded-3xl shadow-xl p-8 mb-12">
            <h3 class="text-2xl font-bold text-center mb-6 text-yellow-700">Indicadores de Precio</h3>
            <div class="grid grid-cols-3 gap-6 items-center">
                <!-- Color Labels -->
                <div class="text-center">
                    <p class="font-bold text-lg text-green-700">Verde</p>
                </div>
                <div class="text-center">
                    <p class="font-bold text-lg text-yellow-600">Amarillo</p>
                </div>
                <div class="text-center">
                    <p class="font-bold text-lg text-blue-700">Azul</p>
                </div>
                
                <!-- Color Dots -->
                <div class="flex justify-center transform transition hover:scale-110 duration-300">
                    <img src="/assets/catalog/green-round.png" alt="Indicador verde" class="h-16 w-16 drop-shadow-md">
                </div>
                <div class="flex justify-center transform transition hover:scale-110 duration-300">
                    <img src="/assets/catalog/yellow-round.png" alt="Indicador amarillo" class="h-16 w-16 drop-shadow-md">
                </div>
                <div class="flex justify-center transform transition hover:scale-110 duration-300">
                    <img src="/assets/catalog/blue-round.png" alt="Indicador azul" class="h-16 w-16 drop-shadow-md">
                </div>
            </div>
        </div>
    </section>

    <Divider />

    <!-- Catalog: Bordados -->
    <section class="py-12 px-4">
        <div class="max-w-5xl mx-auto text-center">
            <h2 class="text-5xl font-bold mb-12 text-yellow-800 relative inline-block">
                Catálogo de Bordados
                <span class="absolute -bottom-3 left-0 w-full h-1 bg-yellow-400 rounded-full"></span>
            </h2>

            <div class="mt-12 mb-16">
                <a href="https://www.canva.com/design/DAGU_JUNAQY/HgZJlDzI8OeJCZB51X4COA/view?utm_content=DAGU_JUNAQY&utm_campaign=designshare&utm_medium=link&utm_source=viewer" 
                class="group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-yellow-400 to-yellow-500 text-black 
                text-lg font-bold rounded-xl shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300">
                    <img src="/assets/list.svg" alt="Lista" class="w-6 h-6 group-hover:animate-pulse">
                    <span class="font-bold text-xl">Lista de Precios</span> 
                </a>
            </div>
        </div>
    </section>

    <div class="flex flex-col p-4 max-w-6xl mx-auto relative">
        <!-- Título y botón -->
        <div class="mb-2 flex flex-col md:flex-row gap-4 justify-center md:justify-between items-center w-full relative">
            <h2 class="font-bold text-center text-3xl md:text-3xl md:absolute md:left-1/2 md:transform md:-translate-x-1/2">
                COLECCIÓN BORDART
            </h2>
        </div>
    
        <!-- Slider con imágenes -->
        <div class="relative w-full overflow-hidden">
            <!-- Botón Izquierdo -->
            <button id="prevBtn" class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-black text-white p-2 rounded-full z-10">
                &#10094;
            </button>
    
            <!-- Contenedor del carrusel -->
            <div id="carousel" class="flex transition-transform duration-500 ease-in-out gap-4">
                <img class="w-full md:w-1/4 object-cover" src="/assets/catalog/coleccion-bordart/coleccion1.jpeg" alt="">
                <img class="w-full md:w-1/4 object-cover" src="/assets/catalog/coleccion-bordart/coleccion2.jpeg" alt="">
                <img class="w-full md:w-1/4 object-cover" src="/assets/catalog/coleccion-bordart/coleccion3.jpeg" alt="">
                <img class="w-full md:w-1/4 object-cover" src="/assets/catalog/coleccion-bordart/coleccion4.jpeg" alt="">
                <img class="w-full md:w-1/4 object-fit" src="/assets/catalog/coleccion-bordart/coleccion5.jpeg" alt="">
                <img class="w-full md:w-1/4 object-cover" src="/assets/catalog/coleccion-bordart/coleccion6.jpeg" alt="">
            </div>
    
            <!-- Botón Derecho -->
            <button id="nextBtn" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-black text-white p-2 rounded-full z-10">
                &#10095;
            </button>
        </div>
    </div>
    
   
    <!-- PINES Section -->
    <section class="py-8 px-4 max-w-6xl mx-auto">
        <div class="bg-white rounded-3xl shadow-lg p-8 mb-12 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 bg-yellow-100 rounded-full -mr-16 -mt-16 z-0"></div>
            <div class="absolute bottom-0 left-0 w-24 h-24 bg-yellow-100 rounded-full -ml-12 -mb-12 z-0"></div>
            
            <div class="relative z-10 flex flex-col md:flex-row gap-6 justify-between items-center w-full">
                <h2 class="font-bold text-4xl text-yellow-800 relative">
                    PINES
                    <span class="absolute -bottom-2 left-0 w-full h-1 bg-yellow-400 rounded-full"></span>
                </h2>
                
                <a href="https://www.canva.com/design/DAF1UlYs1g0/eMC1WO6zq4GNpVWML0L4mA/view?utm_content=DAF1UlYs1g0&utm_campaign=designshare&utm_medium=link&utm_source=editor" 
                   class="group flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-yellow-200 to-yellow-300 text-black 
                   font-bold rounded-lg shadow-md hover:shadow-lg hover:scale-105 transition-all duration-300">
                    <span class="font-bold text-lg">Ver más</span> 
                    <img src="/assets/mas.svg" alt="Ver más" class="w-6 h-6 group-hover:rotate-90 transition-transform duration-300">
                </a>
            </div>
        </div>
    </section>
     
    <div class="bg-yellow-50 pt-12">
        <Divider />
    </div>
     
    <Footer />
   </div>
</Layout>

<style>
    @keyframes scroll{
        0%{
            transform: translateX(0);
            -webkit-animation: translateX(0);
        }
        100%{
            transform: translateX(calc(-200px * 6));
            -webkit-animation: translateX(calc(-200px * 6));
        }
    }

   .slider .slide-track{
        width: calc(200px * 12);
        animation: scroll 20s linear infinite;
        -webkit-animation: scroll 20s linear infinite;
    }
</style>

<script>
    const carousel = document.getElementById("carousel");
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");

    let index = 0;
    const totalImages = carousel ? carousel.children.length : 0;
    const itemsPerView = window.innerWidth >= 768 ? 4 : 1; // 4 en md, 1 en sm
    const step = 100 / totalImages * itemsPerView; // Movimiento en %

    function updateCarousel() {
        if (carousel) {
            carousel.style.transform = `translateX(-${index * step}%)`;
        }
    }

    if (nextBtn) {
        nextBtn.addEventListener("click", () => {
            if (index < totalImages / itemsPerView - 1) {
                index++;
                updateCarousel();
            }
        });
    }

    if (prevBtn) {
        prevBtn.addEventListener("click", () => {
            if (index > 0) {
                index--;
                updateCarousel();
            }
        });
    }

    window.addEventListener("resize", () => {
        index = 0; // Reiniciar al cambiar tamaño de pantalla
        updateCarousel();
    });
</script>
