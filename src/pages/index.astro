<Layout>
  
  <div class="hidden md:block">
    <TopBtn />
  </div>
  <Navigation />
  <Hero/>
  <Drop />
  <Carousel />
  <!-- Imagen de arriba a la izquierda -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none z-0 translate-y-[400px]">
    <div class="hidden lg:block absolute -left-32 top-1/2 opacity-20 animate-float-slow">
      <img class="size-80" src="/assets/logo-bordart.png" alt="Background decoration">
    </div>
    <div class="hidden lg:block absolute -right-32 top-16 opacity-20 animate-float">
      <img class="size-80" src="/assets/logo-bordart.png" alt="Background decoration">
    </div>
  </div>
  <Divider />
  <Products />
  <div class="bg-white">      
    <Divider />
  </div>
  <Buy />
  <div class="bg-gradient-to-b from-white to-yellow-50">
    <Questions/>
  </div>
  <div class="bg-yellow-50">      
    <Divider />
  </div>
  <Footer />
  
</Layout>

<style>
  /* Animation keyframes for floating elements */
  @keyframes float {
    0% { transform: translateY(0px) translateX(0px); }
    50% { transform: translateY(-15px) translateX(10px); }
    100% { transform: translateY(0px) translateX(0px); }
  }
  
  @keyframes float-slow {
    0% { transform: translateY(0px) translateX(0px); }
    50% { transform: translateY(15px) translateX(-10px); }
    100% { transform: translateY(0px) translateX(0px); }
  }
  
  .animate-float {
    animation: float 8s ease-in-out infinite;
  }
  
  .animate-float-slow {
    animation: float-slow 12s ease-in-out infinite;
  }
</style>