---
import Divider from '../components/Divider.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <Navigation />
    <section id="remeras" class="flex flex-col items-center justify-center p-6 md:p-12 bg-gradient-to-b from-white to-yellow-50 min-h-screen">
        <div class="max-w-6xl w-full mx-auto">
            <h1 class="text-4xl md:text-6xl font-bold text-center mb-8 relative">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-amber-700 to-amber-500">REMERAS</span>
                <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-amber-500 rounded-full"></div>
            </h1>
            
            <div id="imagenes" class="max-w-5xl mx-auto my-10 border-amber-200 border-2 rounded-xl shadow-xl overflow-hidden bg-white">
                <img src="/assets/productos/producto-remera-1.jpeg" alt="Remera dise침o 1" class="hover:shadow-lg transition-all duration-500">
                <img src="/assets/productos/producto-remera-3.jpeg" alt="Remera dise침o 2" class="hover:shadow-lg transition-all duration-500">
                <img src="/assets/productos/producto-remera-2.jpeg" alt="Remera dise침o 3" class="hover:shadow-lg transition-all duration-500">
            </div>

            <div class="mt-12 text-center">
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 inline-block relative">
                    Opciones
                    <div class="absolute -bottom-2 left-0 w-full h-0.5 bg-amber-400 rounded-full"></div>
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8 max-w-4xl mx-auto">
                    <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-amber-100">
                        <div class="text-3xl mb-3">游녯</div>
                        <h3 class="font-medium text-lg mb-2">Estilo Cl치sico</h3>
                        <p class="text-gray-600">Ajuste tradicional con el toque 칰nico de nuestros bordados.</p>
                    </div>
                    
                    <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-amber-100">
                        <div class="text-3xl mb-3">游댠</div>
                        <h3 class="font-medium text-lg mb-2">Estilo Oversize</h3>
                        <p class="text-gray-600">Estilo relajado y bordados con personalidad.</p>
                    </div>
                </div>
            </div>

            <!-- Secci칩n de colores -->
            <div class="mt-12 text-center">
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 inline-block relative">
                    Colores Disponibles
                    <div class="absolute -bottom-2 left-0 w-full h-0.5 bg-amber-400 rounded-full"></div>
                </h2>
                <div class="flex justify-center gap-6 mt-8">
                    <div class="w-24 h-24 rounded-full bg-white border-2 border-gray-400 shadow-md flex items-center justify-center text-lg
                     font-medium hover:bg-black hover:text-white transition-colors duration-300">
                        Blanco
                    </div>
                    <div class="w-24 h-24 rounded-full bg-black text-white border-2 border-gray-400 shadow-md flex items-center 
                    justify-center text-lg font-medium hover:bg-white hover:text-black transition-colors duration-300">
                        Negro
                    </div>
                </div>
            </div>

            <!-- Secci칩n de tablas de talles -->
            <div class="mt-12 text-center">
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 inline-block relative">
                    Tablas de Talles
                    <div class="absolute -bottom-2 left-0 w-full h-0.5 bg-amber-400 rounded-full"></div>
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8 max-w-4xl mx-auto">
                    <div class="bg-white p-6 rounded-lg shadow-md border border-amber-100">
                        <h3 class="font-medium text-lg mb-4">Remeras Cl치sicas</h3>
                        <img src="/assets/productos/talles-remeras.jpeg" alt="Tabla de talles - Remeras Cl치sicas" class="rounded-lg shadow-md">
                    </div>
                    <div class="bg-white p-6 rounded-lg shadow-md border border-amber-100">
                        <h3 class="font-medium text-lg mb-4">Remeras Oversize</h3>
                        <img src="/assets/productos/talles-remeras-over.jpeg" alt="Tabla de talles - Remeras Oversize" class="rounded-lg shadow-md">
                    </div>
                </div>
            </div>
            <!-- Como Comprar -->
            <div class="flex flex-col mx-auto items-center justify-center mt-12 text-center">
                <a href="/#como-comprar" id="comprar" class="group relative flex items-center gap-2 px-6 py-3 bg-yellow-400 text-black text-lg font-bold rounded-lg shadow-lg transition-all duration-300 hover:bg-yellow-500 hover:shadow-xl">
                    <span class="font-bold text-lg z-10">Comprar</span>
                    <img id="cart" src="/assets/cart.svg" alt="" class="w-8 h-8 z-10 transition-all duration-300 group-hover:invert group-hover:brightness-0">
                    <span class="absolute inset-0 bg-yellow-400 z-0"></span> <!-- Span que se animar치 -->
                </a>
            </div>
        </div>
    </section>
    <div class="bg-yellow-50">
        <Divider />
    </div>
    <Footer />
</Layout>

<style>
    #imagenes {
        display: flex;
        width: 100%;
        height: 430px;
    }
    
    #imagenes img {
        width: 0px;
        flex-grow: 1;
        object-fit: cover;
        opacity: 0.8;
        transition: .6s ease;
    }
    
    #imagenes img:hover {
        cursor: crosshair;
        width: 300px;
        opacity: 1;
        filter: contrast(120%);
    }
    
    @media (max-width: 768px) {
        #imagenes {
            height: 300px;
        }
        
        #imagenes img:hover {
            width: 200px;
        }
    }

    @keyframes wipe-in-left {
        from {
            clip-path: inset(0 0 0 100%);
        }
        to {
            clip-path: inset(0 0 0 0);
        }
    }

    #comprar {
        position: relative;
        overflow: hidden; /* Importante para asegurar que el efecto clip-path se vea */
    }

    #comprar:hover .absolute {
        animation: wipe-in-left 0.8s cubic-bezier(.25, 1, .30, 1) forwards;
        background-color: rgb(161 98 7 / var(--tw-bg-opacity, 1));
    }

    #comprar:hover {
        color: white;
    }
</style>