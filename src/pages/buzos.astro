---
import Navigation from "../components/Navigation.astro";
import Layout from "../layouts/Layout.astro";
import Divider from "../components/Divider.astro";
import Footer from "../components/Footer.astro";
import TopBtn from "../components/Button.astro";
---

<Layout title="Buzos | BordArt">
    <Navigation />
    <section id="buzos" class="p-6 flex flex-col items-center justify-center min-h-screen bg-gradient-to-b from-white to-yellow-50">
        <div class="max-w-6xl w-full mx-auto">
            <!-- Imagenes -->
            <h1 class="text-4xl md:text-6xl font-bold text-center mb-8 relative">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-amber-700 to-amber-500">BUZOS</span>
                <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-amber-500 rounded-full"></div>
            </h1>
            
            <div id="imagenes" class="max-w-5xl mx-auto my-10 border-amber-200 border-2 rounded-xl shadow-xl overflow-hidden bg-white">
                <img src="/assets/productos/producto-buzo-1.jpeg" alt="Remera diseño 1" class="hover:shadow-lg transition-all duration-500 object-contain w-full h-auto">
                <img src="/assets/productos/producto-buzo-2.jpeg" alt="Remera diseño 2" class="hover:shadow-lg transition-all duration-500 object-contain w-full h-auto">
                <img src="/assets/productos/producto-buzo-3.jpeg" alt="Remera diseño 3" class="hover:shadow-lg transition-all duration-500 object-contain w-full h-auto">
            </div>
            <!-- Opciones de Colores -->
            <div class="mt-12 text-center">
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 inline-block relative">
                    Colores Disponibles
                    <div class="absolute -bottom-2 left-0 w-full h-0.5 bg-amber-400 rounded-full"></div>
                </h2>
                <div class="flex justify-center gap-6 mt-8">
                    <div class="w-24 h-24 rounded-full bg-black text-white border-2 border-gray-400 shadow-md flex items-center 
                    justify-center text-lg font-medium hover:bg-white hover:text-black transition-colors duration-300">
                        Negro
                    </div>
                </div>
            </div>
            <!-- Tabla de Talles -->
            <div class="mt-12 text-center">
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 inline-block relative">
                    Tablas de Talles
                    <div class="absolute -bottom-2 left-0 w-full h-0.5 bg-amber-400 rounded-full"></div>
                </h2>
                <div class="flex flex-col items-center justify-center gap-6 mt-8 max-w-4xl mx-auto">
                    <div class="bg-white p-6 rounded-lg shadow-md border border-amber-100">
                        <h3 class="font-medium text-lg mb-4">Remeras Clásicas</h3>
                        <img src="/assets/productos/talles-buzos.jpeg" alt="Tabla de talles - Remeras Clásicas" class="rounded-lg shadow-md object-cover w-96 h-auto">
                    </div>
                    
                </div>
            </div>

            <!-- Como Comprar -->
            <div class="flex flex-col mx-auto items-center justify-center mt-12 text-center">
                <button class="border text-lg shadow-lg hover:bg-gray-700 max-w-34">
                    <a class="font-bold text-cyan-700 hover:text-white" 
                    href="/#como-comprar">
                    Comprar 
                    </a>
                </button>
            </div>
            
        </div>
    </section>
    <div class="bg-yellow-50">
        <Divider />
    </div>
    <Footer/>
<Layout />

<style>
    #imagenes {
        display: flex;
        width: 100%;
        height: 430px;
    }
    
    #imagenes img {
        width: 0px;
        flex-grow: 1;
        object-fit: cover;
        opacity: 0.8;
        transition: .6s ease;
    }
    
    #imagenes img:hover {
        cursor: crosshair;
        width: 300px;
        opacity: 1;
        filter: contrast(120%);
    }
    
    @media (max-width: 768px) {
        #imagenes {
            height: 300px;
        }
        
        #imagenes img:hover {
            width: 200px;
        }
    }
</style>