---
import Navigation from "../components/Navigation.astro";
import Layout from "../layouts/Layout.astro";
import Divider from "../components/Divider.astro";
import Footer from "../components/Footer.astro";
import TopBtn from "../components/Button.astro";
---

<Layout title="Buzos | BordArt">
    <Navigation />
    
    <section class="mx-auto px-4 sm:px-6 lg:px-8 py-12 bg-gradient-to-b from-white to-yellow-50 min-h-screen flex flex-col items-center">

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 bg-white max-w-6xl">
            <!-- Product Images -->
            <div class="flex flex-col-reverse md:flex-row gap-4">
                <!-- Thumbnails -->
                <div class="flex md:flex-col gap-4 mt-4 md:mt-0">
                    <button class="thumbnail-btn border-2 border-black p-1 rounded-md" data-image="/assets/productos/producto-buzo-1.jpeg">
                        <img src="/assets/productos/producto-buzo-1.jpeg" alt="Buzo view 1" class="w-16 h-16 object-cover">
                    </button>
                    <button class="thumbnail-btn border p-1 rounded-md" data-image="/assets/productos/producto-buzo-2.jpeg">
                        <img src="/assets/productos/producto-buzo-2.jpeg" alt="Buzo view 2" class="w-16 h-16 object-cover">
                    </button>
                    <button class="thumbnail-btn border p-1 rounded-md" data-image="/assets/productos/producto-buzo-3.jpeg">
                        <img src="/assets/productos/producto-buzo-3.jpeg" alt="Buzo view 3" class="w-16 h-16 object-cover">
                    </button>
                </div>
                
                <!-- Main Image -->
                <div class="flex-1 bg-white rounded-lg overflow-hidden min-h-96 min-w-96 shadow-lg">
                    <img id="main-image" src="/assets/productos/producto-buzo-1.jpeg" alt="Buzo main view" class="w-96 h-96 min-w-96 min-h-96 object-contain aspect-square">
                </div>
            </div>

            <div class="bg-red-100 flex flex-col items-center mx-auto ">
                <h1 class="font-bold text-4xl">BUZOS OVERSIZE</h1>
                <div >

                </div>
                <p class="text-lg font-black">
                    Buzo de Frisa Rustica Oversize 75% algodón y 25% poliéster
                    Con tapa costura en el cuello y un corte amplio, este buzo es 
                    ideal para esos días frescos en los que querés mantenerte abrigado 
                    sin perder el toque moderno.
                </p>
            </div>
        </div>
        <div class="mt-12 text-center">
            <h2 class="text-2xl md:text-3xl font-semibold mb-6 inline-block relative">
                Tablas de Talles
                <div class="absolute -bottom-2 left-0 w-full h-0.5 bg-amber-400 rounded-full"></div>
            </h2>
            <div class="flex flex-col gap-6 mt-8 max-w-4xl mx-auto">
                <div class="bg-white p-6 rounded-lg shadow-md border border-amber-100">
                    <h3 class="font-medium text-lg mb-4">Buzos Oversize</h3>
                    <img src="/assets/productos/talles-buzos.jpeg" alt="Tabla de talles - Buzos Oversize" class="rounded-lg shadow-md size-fit">
                </div>
                
            </div>
        </div>
    <section/>
    <TopBtn />
    <div class="bg-yellow-50">
        <Divider />
    </div>
    <Footer/>
</Layout>

<script>
// Image gallery functionality
document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.getElementById('main-image') as HTMLImageElement;
    const thumbnailBtns = document.querySelectorAll('.thumbnail-btn');
    
    thumbnailBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Update sectionimage
            if (mainImage) {
                const imageSrc = (btn as HTMLElement).dataset.image;
                if (imageSrc) {
                    mainImage.src = imageSrc;
                }
            }
            
            // Update active thumbnail
            thumbnailBtns.forEach(tb => tb.classList.remove('border-2', 'border-black'));
            btn.classList.add('border-2', 'border-black');
        });
    });
    
});
</script>