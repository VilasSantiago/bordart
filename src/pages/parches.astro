<style>
    #imagenes {
        display: flex;
        width: 100%;
        height: 430px;
    }
    
    #imagenes img {
        width: 0px;
        flex-grow: 1;
        object-fit: cover;
        opacity: 0.8;
        transition: .6s ease;
    }
    
    #imagenes img:hover {
        cursor: crosshair;
        width: 300px;
        opacity: 1;
        filter: contrast(120%);
    }
    
    @media (max-width: 768px) {
        #imagenes {
            height: 300px;
        }
        
        #imagenes img:hover {
            width: 200px;
        }
    }

    @keyframes wipe-in-left {
  from {
    clip-path: inset(0 0 0 100%);
  }
  to {
    clip-path: inset(0 0 0 0);
  }
}

#comprar {
    position: relative;
    overflow: hidden; /* Importante para asegurar que el efecto clip-path se vea */
}

#comprar:hover .absolute {
    animation: wipe-in-left 0.8s cubic-bezier(.25, 1, .30, 1) forwards;
    background-color: rgb(161 98 7 / var(--tw-bg-opacity, 1));
}

#comprar:hover {
    color: white;
}

</style>